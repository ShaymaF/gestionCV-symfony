{% extends 'base.html.twig' %}

{% block title %}Parcours index{% endblock %}

{% block body %}
    <h1>Parcours index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Post</th>
                <th>Emplacement</th>
                <th>Mission</th>
                <th>Technologies</th>
                <th>Description</th>
                <th>DateDebut</th>
                <th>Datefin</th>
                <th>Projet</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for parcour in parcours %}
            <tr>
                <td>{{ parcour.id }}</td>
                <td>{{ parcour.post }}</td>
                <td>{{ parcour.emplacement }}</td>
                <td>{{ parcour.mission }}</td>
                <td>{{ parcour.technologies }}</td>
                <td>{{ parcour.description }}</td>
                <td>{{ parcour.dateDebut ? parcour.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ parcour.datefin ? parcour.datefin|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ parcour.projet }}</td>
                <td>
                    <a href="{{ path('parcours_show', {'id': parcour.id}) }}">show</a>
                    <a href="{{ path('parcours_edit', {'id': parcour.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('parcours_new') }}">Create new</a>
{% endblock %}
